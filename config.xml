<?xml version='1.0' encoding='utf-8'?>
<widget id="com.mdiyoniyat.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>إدارة مديونيات</name>
    <description>
        تطبيق لإدارة المديونيات والسدادات
    </description>
    <author email="support@mdiyoniyat.com" href="https://mdiyoniyat.com">
        فريق إدارة المديونيات
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="www/شعار.png" />
        <icon density="mdpi" src="www/شعار.png" />
        <icon density="hdpi" src="www/شعار.png" />
        <icon density="xhdpi" src="www/شعار.png" />
        <icon density="xxhdpi" src="www/شعار.png" />
        <icon density="xxxhdpi" src="www/شعار.png" />
        <preference name="AndroidWindowSplashScreenAnimatedIcon" value="www/شعار.png" />
        <edit-config file="app/src/main/AndroidManifest.xml" mode="merge" target="/manifest/application">
            <application android:usesCleartextTraffic="true" />
        </edit-config>
    </platform>
    
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="24" />
    <preference name="android-targetSdkVersion" value="33" />
    <preference name="BackupWebStorage" value="local" />
    <preference name="Orientation" value="portrait" />
    
    <plugin name="cordova-plugin-contacts" spec="~3.0.1">
        <variable name="CONTACTS_USAGE_DESCRIPTION" value="لاستيراد أسماء من جهات الاتصال" />
    </plugin>
</widget>
